<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.application.helpshake">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:name=".model.user.UserClient"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:targetApi="m">

        <activity android:name=".view.SplashScreen">

            <!-- <intent-filter> -->
            <!-- <action android:name="android.intent.action.MAIN" /> -->
            <!-- <category android:name="android.intent.category.LAUNCHER" /> -->
            <!-- </intent-filter> -->
        </activity>
        <activity android:name=".view.volunteer.VolunteerNotificationActivity" />
        <activity android:name=".view.helpseeker.OfferListHelpSeekerActivity" />
        <activity android:name=".view.helpseeker.HelpSeekerHomeActivity" />
        <activity
            android:name=".view.helpseeker.HelpSeekerProfilePage"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".view.volunteer.VolunteerHomeActivity" />
        <activity android:name=".view.volunteer.VolunteerProfilePage" />
        <activity android:name=".view.volunteer.CurrentHelpOffersActivity" />
        <activity android:name=".view.volunteer.WaitingHelpOffersActivity"/>
        <activity android:name=".view.volunteer.CompletedOffersActivity"/>
        <activity
            android:name=".view.auth.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <!--  -->
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.auth.RegisterActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.others.SettingsPopUp"
            android:theme="@style/AppTheme.PopUpTheme" />
        <activity android:name=".view.others.ReviewsActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>