<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/commentText"
        app:layout_constraintTop_toTopOf="@id/commentText">


            <TextView
                android:visibility="visible"
                android:id="@+id/nameAndSurnameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/varela_round"
                android:text="@string/name_and_surname"
                android:textColor="@color/justText"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageView2"
                android:layout_width="162dp"
                android:layout_height="152dp"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:contentDescription="@string/help_seeker_photo"
                android:src="@drawable/empty_profile"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nameAndSurnameText" />


            <ImageView
                android:id="@+id/mapButton"
                android:layout_width="71dp"
                android:layout_height="66dp"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="56dp"
                android:layout_marginEnd="50dp"
                android:layout_marginRight="50dp"
                android:contentDescription="@string/map_point_image"
                app:layout_constraintBottom_toTopOf="@+id/requestTitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView2"
                app:layout_constraintTop_toBottomOf="@+id/nameAndSurnameText"
                app:layout_constraintVertical_bias="0.126"
                app:srcCompat="@drawable/map" />

            <TextView
                android:id="@+id/requestTitle"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="36dp"
                android:fontFamily="@font/varela_round"
                android:text="@string/request_title"
                android:textColor="@color/justText"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView2" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="200dp"
                android:layout_height="49dp"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/requestTitle">

                <CheckBox
                    android:id="@+id/other"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/checkbox_others"
                    android:button="@null"
                    app:layout_constraintStart_toEndOf="@+id/drugstore"
                    app:layout_constraintTop_toTopOf="parent" />

                <CheckBox
                    android:id="@+id/dogwalking"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/checkbox_dog"
                    android:button="@null"
                    app:layout_constraintStart_toEndOf="@+id/grocery"
                    app:layout_constraintTop_toTopOf="parent" />

                <CheckBox
                    android:id="@+id/drugstore"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/checkbox_drugstore"
                    android:button="@null"
                    app:layout_constraintStart_toEndOf="@+id/dogwalking"
                    app:layout_constraintTop_toTopOf="parent" />

                <CheckBox
                    android:id="@+id/grocery"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/checkbox_groceries"
                    android:button="@null"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/helpSeekerCommentText"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/varela_round"
                android:text="@string/comments_from_help_seeker"
                android:textColor="@color/justText"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

            <TextView
                android:id="@+id/commentText"
                android:layout_width="307dp"
                android:layout_height="51dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/varela_round"
                android:text="@string/comment"
                android:textAlignment="center"
                android:textColor="@color/justText"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/helpSeekerCommentText"
                android:gravity="center_horizontal" />

            <Button
                android:id="@+id/offerHelpBtn"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rounded_button"
                android:fontFamily="@font/varela_round"
                android:padding="12dp"
                android:text="@string/offer_help"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/cancelButton"
                app:layout_constraintTop_toBottomOf="@+id/commentText"
                app:layout_constraintVertical_bias="0.53" />

            <Button
                android:id="@+id/cancelButton"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rounded_button"
                android:fontFamily="@font/varela_round"
                android:padding="12dp"
                android:text="@string/cancel"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/offerHelpBtn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/commentText"
                app:layout_constraintVertical_bias="0.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>