<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:background="@drawable/request_list_item"
    android:maxHeight="200dp"
    android:layout_marginHorizontal="4dp"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/requestTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/varela_round"
        android:text="@string/request_title"
        android:textColor="@color/justText"
        app:layout_constraintStart_toEndOf="@+id/help_seeker_image"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/help_seeker_image"
        android:layout_width="135dp"
        android:layout_height="120dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/help_seeker_photo"
        android:src="@drawable/empty_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/list_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/justText"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/varela_round"
        android:text="@string/name_and_surname"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/help_seeker_image"
        app:layout_constraintTop_toBottomOf="@+id/requestTitle" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="200dp"
        android:layout_height="49dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toEndOf="@+id/help_seeker_image"
        app:layout_constraintTop_toBottomOf="@+id/list_item_name">

        <CheckBox
            android:id="@+id/other"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/checkbox_others"
            android:button="@null"
            app:layout_constraintStart_toEndOf="@+id/drugstore"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/dogwalking"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/checkbox_dog"
            android:button="@null"
            app:layout_constraintStart_toEndOf="@+id/grocery"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/drugstore"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/checkbox_drugstore"
            android:button="@null"
            app:layout_constraintStart_toEndOf="@+id/dogwalking"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/grocery"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/checkbox_groceries"
            android:button="@null"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textColor="@color/justText"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/varela_round"
        android:text="@string/distance_new"
        app:layout_constraintStart_toEndOf="@+id/help_seeker_image"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>